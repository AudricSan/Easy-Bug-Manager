<!--界面：列表界面-->
<UserControl x:Class="EasyBugManager.ListUiControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:EasyBugManager"
             mc:Ignorable="d" 
             d:DesignHeight="1002" d:DesignWidth="1480"
             
             Name="ListUiUserControl"
             
             Loaded="ListUiControl_OnLoaded">
    
    <Grid>

        <!--上方右边-->
        <Canvas Width="1440" Height="1002">

            <!--熊-->
            <Border Width="334" Height="294" Canvas.Left="1039" Canvas.Top="11"
                    Background="{DynamicResource ListUi.Bear.ImageBrush}"
                    IsHitTestVisible="False"/>

            <!--虫-->
            <Border Width="532" Height="200" Canvas.Left="507" Canvas.Top="44"
                    Background="{DynamicResource ListUi.Bug1.ImageBrush}"
                    IsHitTestVisible="False"/>


            <!--上方按钮-->
            <StackPanel Name="TopButtonGroupStackPanel"
                        Width="83" Height="193"
                        Canvas.Right="63" Canvas.Top="36">

                <!--按钮：最小化-->
                <local:MinimizeButtonControl x:Name="MinimizeButtonControl"
                                             Width="73" Height="62" Margin="0,0,0,0"
                                             PressAnimationSize="0.85,0.85"
                                             MouseLeaveImage="{DynamicResource ListUi.MinimizeButton.MouseLeave.ImageBrush}"
                                             MouseEnterImage="{DynamicResource ListUi.MinimizeButton.MouseEnter.ImageBrush}"
                                             HorizontalAlignment="Right"
                                             Click="MinimizeButtonControl_Click"/>

                <!--按钮：关闭-->
                <local:NoButtonControl x:Name="CloseButtonControl"
                                       Width="70" Height="57" Margin="1,3,0,0"
                                       PressAnimationSize="0.85,0.85"
                                       MouseLeaveImage="{DynamicResource ListUi.NoButton.MouseLeave.ImageBrush}"
                                       MouseEnterImage="{DynamicResource ListUi.NoButton.MouseEnter.ImageBrush}"
                                       Click="CloseButtonControl_Click"/>

                <!--按钮：设置-->
                <local:SettingButtonControl x:Name="SettingButtonControl"
                                            Width="79" Height="68" Margin="-6,3,0,0"
                                            PressAnimationSize="0.85,0.85"
                                            MouseLeaveImage="{DynamicResource ListUi.SettingButton.MouseLeave.ImageBrush}"
                                            MouseEnterImage="{DynamicResource ListUi.SettingButton.MouseEnter.ImageBrush}"
                                            Click="SettingButtonControl_Click"/>

            </StackPanel>


            <!--项目-->
            <Border Width="146" Height="46" Canvas.Left="939" Canvas.Top="105"
                    Background="{DynamicResource ListUi.Text.Project.ImageBrush}"/>

            <!--项目名称-->
            <TextBox Name="ProjectNameTextBox"
                     Text="{Binding ElementName=ListUiUserControl,Path=ProjectNameString}" 
                     FontFamily="{StaticResource ZcoolHappy.FontFamily}" 
                     Canvas.Left="785" Canvas.Top="50" Width="305" Height="60"
                     Foreground="#FFBEBEBE" Background="Transparent" BorderThickness="0"
                     HorizontalContentAlignment="Right" VerticalContentAlignment="Bottom"
                     FontSize="25" RenderTransformOrigin="0.5,0.5"
                     TextWrapping="Wrap"
                     Opacity="0.9"
                     SelectionBrush ="Gray"
                     IsReadOnly="True" IsHitTestVisible="False">
                <TextBox.RenderTransform>
                    <TransformGroup>
                        <ScaleTransform/>
                        <SkewTransform/>
                        <RotateTransform Angle="-4"/>
                        <TranslateTransform/>
                    </TransformGroup>
                </TextBox.RenderTransform>
            </TextBox>

        </Canvas>


        <!--上方左边-->
        <Canvas Width="1440" Height="1002">

            <!--Bug总数：图片-->
            <Border Background="{DynamicResource ListUi.Text.TotalNumber.ImageBrush}"
                        Width="115" Height="26" Canvas.Left="84" Canvas.Top="92"/>

            <!--Bug总数：数据-->
            <StackPanel Canvas.Left="81.5" Canvas.Top="125"
                            Orientation="Horizontal">
                <!--未完成的bug数量-->
                <TextBlock Name="UndoneBugNumberTextBlock"
                           Text="{Binding ElementName=ListUiUserControl,Path=UndoneBugTotalNumber}"
                           FontFamily="{StaticResource ZcoolButter.FontFamily}"
                           FontSize="43" TextAlignment="Right"
                           Foreground="#a54646"/>

                <!--分割线-->
                <Border Background="{DynamicResource ListUi.TotalNumberLine.ImageBrush}"
                        Width="13" Height="39" Margin="13.5,-1,13.5,0"></Border>

                <!--全部的bug数量-->
                <TextBlock Text="{Binding ElementName=ListUiUserControl,Path=AllBugTotalNumber}"
                           FontFamily="{StaticResource ZcoolButter.FontFamily}"
                           FontSize="43" TextAlignment="Left"
                           Foreground="#535353"/>
            </StackPanel>

            <!--分割线-->
            <Border Background="#535353" Opacity="0.18"
                    Width="2.3" Height="103" Canvas.Left="299" Canvas.Top="79.5"></Border>

            <!--优先级总数：图片-->
            <Border Background="{DynamicResource ListUi.Text.PriorityNumber.ImageBrush}"
                        Width="31" Height="75" Canvas.Left="333" Canvas.Top="95"></Border>

            <StackPanel Canvas.Left="393.5" Canvas.Top="88.5">

                <!--数量：优先级高-->
                <TextBlock Name="PriorityHighBugNumberTextBlock"
                           Text="{Binding ElementName=ListUiUserControl,Path=HighUndoneBugTotalNumber}"
                           FontFamily="{StaticResource ZcoolButter.FontFamily}"
                           FontSize="23" Foreground="#a54646"/>

                <!--数量：优先级中-->
                <TextBlock Name="PriorityMidBugNumberTextBlock"
                           Text="{Binding ElementName=ListUiUserControl,Path=MidUndoneBugTotalNumber}"
                           FontFamily="{StaticResource ZcoolButter.FontFamily}"
                           FontSize="23" Foreground="#4669a5"
                           Margin="0,2,0,0"/>

                <!--数量：优先级低-->
                <TextBlock Name="PriorityLowBugNumberTextBlock"
                           Text="{Binding ElementName=ListUiUserControl,Path=LowUndoneBugTotalNumber}"
                           FontFamily="{StaticResource ZcoolButter.FontFamily}"
                           FontSize="23" Foreground="#5e5e5e"
                           Margin="0,3,0,0"/>

            </StackPanel>

        </Canvas>


        <!--中间-->
        <Canvas Width="1440" Height="1002">

            <!--按钮：添加-->
            <local:ImageButtonControl Width="50" Height="44" Canvas.Left="78.5" Canvas.Top="210"
                                      PressAnimationSize="0.8,0.8"
                                      MouseLeaveImage="{DynamicResource ListUi.AddButton.MouseLeave.ImageBrush}"
                                      MouseEnterImage="{DynamicResource ListUi.AddButton.MouseEnter.ImageBrush}"
                                      Click="AddBugButton_Click"/>

            <!--按钮：删除-->
            <local:ImageButtonControl Width="50" Height="44" Canvas.Left="135" Canvas.Top="210"
                                      PressAnimationSize="0.8,0.8"
                                      MouseLeaveImage="{DynamicResource ListUi.DeleteButton.MouseLeave.ImageBrush}"
                                      MouseEnterImage="{DynamicResource ListUi.DeleteButton.MouseEnter.ImageBrush}"
                                      Click="DeleteBugButton_Click"/>

            <!--输入框：背景-->
            <Grid Width="349" Height="46" Canvas.Left="219" Canvas.Top="209">

                <Border Background="{DynamicResource ListUi.Text.SearchBox.ImageBrush}"
                        Width="349" Height="46"/>

                <TextBox Name="SearchTextBox"
                         Text=""
                         BorderThickness="0" Margin="5"
                         SelectionBrush ="Gray"
                         VerticalContentAlignment="Center"
                         FontFamily="{StaticResource ZcoolLiterary.FontFamily}"
                         FontSize="21" Padding="5,4,42,0"
                         Background="Transparent" Foreground="#FF767676" 
                         TextChanged="SearchTextBox_TextChanged"/>

                <local:ImageButtonControl x:Name="ClearSearchButtonControl"
                                          Width="32" Height="32"
                                          PressAnimationSize="0.85,0.85"
                                          HorizontalAlignment="Right" Margin="0,0,10,0"
                                          MouseEnterImage="{DynamicResource ListUi.SearchBox.CloseButton.ImageBrush}"
                                          MouseLeaveImage="{DynamicResource ListUi.SearchBox.CloseButton.ImageBrush}"
                                          
                                          Visibility="Collapsed"
                                          Click="ClearSearchButtonControl_Click"/>

            </Grid>

        </Canvas>


