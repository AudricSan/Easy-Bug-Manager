                                             ArrowUpImage="{DynamicResource ListUi.Arrow.Priority.Up.ImageBrush}"
                                             ArrowDownImage="{DynamicResource ListUi.Arrow.Priority.Down.ImageBrush}"
                                             Text="{DynamicResource ListUi.Text.Priority.ImageBrush}"
                                             TextPadding="-1,5,0,0" TextWidth="63" TextHeight="23"
                                             ButtonPadding="0,5,0,0" ButtonWidth="100" ButtonHeight="34"
                                             SortType="{Binding ElementName=ListUiUserControl,Path=PrioritySortType}" 
                                             IsCanClick="True"
                                             Click="PriorityListHeadButton_Click"/>

