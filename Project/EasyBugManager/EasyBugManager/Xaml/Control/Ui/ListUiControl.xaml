                                             Grid.Column="0"
                                             ArrowNoneImage="{DynamicResource ListUi.Arrow.Progress.None.ImageBrush}"
                                             ArrowUpImage="{DynamicResource ListUi.Arrow.Progress.Up.ImageBrush}"
                                             ArrowDownImage="{DynamicResource ListUi.Arrow.Progress.Down.ImageBrush}"
                                             Text="{DynamicResource ListUi.Text.Progress.ImageBrush}"
                                             TextPadding="-5,5,0,0" TextWidth="76" TextHeight="24"
                                             ButtonPadding="-5,5,0,0" ButtonWidth="100" ButtonHeight="34"
                                             SortType="{Binding ElementName=ListUiUserControl,Path=ProgressSortType}"
                                             IsCanClick="True"
                                             Click="ProgressListHeadButton_Click"/>

                <!--表头：优先级-->
                <local:ListHeadButtonControl x:Name="PriorityListHeadButtonControl"
